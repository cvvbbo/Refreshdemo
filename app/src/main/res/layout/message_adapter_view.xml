<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="77dp">


    <TextView
        android:textColor="@color/text_color"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/title1"
        android:text="系统维护通知"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:ellipsize="end"
        android:maxLines="1"
        android:maxEms="20"
        android:paddingLeft="10dp"
        android:layout_below="@+id/title1"
        android:id="@+id/content"
        android:text="新版本更新，系统将于2018年10月31日18点至…"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <View
        android:id="@+id/buttom_line"
        android:layout_alignParentBottom="true"
        android:background="@color/tcredit_line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



    <View
        android:id="@+id/v3"
        android:layout_alignParentRight="true"
        android:layout_width="1dp"
        android:layout_height="1dp"/>


    <ImageView
        android:layout_toLeftOf="@id/v3"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:id="@+id/into_im"
        android:src="@drawable/item_go"
        android:layout_width="13dp"
        android:layout_height="30dp" />


    <ImageView
        android:src="@drawable/shape_badgeview"
        android:id="@+id/badgeview"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/into_im"
        android:layout_width="13dp"
        android:layout_height="13dp" />




</RelativeLayout>